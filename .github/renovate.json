{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "baseBranches": [
    "main"
  ],
  "schedule": [
    "before 4am on the first day of the month"
  ],
  "automergeStrategy": "merge-commit",
  "packageRules": [
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "dependencies-minor-patch-digest"
    },
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "enabled": true,
      "groupName": "compose dependencies",
      "prBodyNotes": [
        "Update Compose dependencies"
      ],
      "branchPrefix": "renovate/compose-",
      "labels": [
        "compose-update"
      ],
      "matchPackageNames": [
        "/^androidx\\.compose\\./",
        "/^org\\.jetbrains\\.compose\\./"
      ]
    }
  ],
  "assignees": [
    "fsanchezdev"
  ],
  "semanticCommitScope": "{{parentDir}}",
  "separateMajorMinor": true
}
